{
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": ["warn", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["warn", "single"],
        "semi": ["warn", "always"],
        "no-unused-vars": ["warn"],
        "arrow-body-style": ["warn", "as-needed"],
        "prefer-arrow-callback": ["warn"],
        "strict": ["warn"],
        "no-console": ["off"]
    },
    "globals": {
        "google": true,
        "Fuse": true,
        "S2": true
    }
}